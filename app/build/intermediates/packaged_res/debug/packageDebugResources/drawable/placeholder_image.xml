<?xml version="1.0" encoding="utf-8"?>
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <!-- Background color -->
        <solid android:color="#D3D3D3" /> <!-- Light grey background -->

        <!-- Outline (stroke) -->
        <stroke
            android:width="2dp"
            android:color="#000000" /> <!-- Black outline -->

        <!-- Optional: Rounded corners -->
        <corners android:radius="0dp" /> <!-- Optional: rounded corners -->

        <!-- Padding inside the shape -->
        <padding
            android:left="8dp"
            android:top="8dp"
            android:right="8dp"
            android:bottom="8dp" />
    </shape>